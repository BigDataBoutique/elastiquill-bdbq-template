<main class="content">
  <div class="container">
    <div class="mt-3 mb-5">
      <h2>
        {{#if searchQuery}}
          <span class="text-muted">Showing search results for </span>"{{searchQuery}}"
        {{else}}
          Showing all posts
        {{/if}}
      </h2>
    </div>
    {{> filter-box}}
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
    {{#if totalPages}}
      {{> pagination}}
    {{/if}}
  </div>
</main>
