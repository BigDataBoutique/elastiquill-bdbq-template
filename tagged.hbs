<main class="content">
  <div class="container">
    <div class="mt-3">
      {{> filter-box}}
    </div>
    {{#if tagDescription}}
      <div class="mb-2">
        <h2 class="text-capitalize"><span class="text-muted">Posts tagged with: </span>{{tag}}</h2>
      </div>
      <div class="tag-description mb-5">
        {{{tagDescription.content}}}
      </div>
    {{else}}
      <div class="mb-5">
        <h2 class="text-capitalize"><span class="text-muted">Posts tagged with: </span>{{tag}}</h2>
      </div>
    {{/if}}
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
    {{#if totalPages}}
      {{> pagination}}
    {{/if}}
  </div>
</main>
