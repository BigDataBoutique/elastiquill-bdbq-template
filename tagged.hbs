<main class="content">
  <div class="container">
    <div class="mb-4">
      <h2 class="text-capitalize"><span class="text-muted">Posts tagged with: </span>{{tag}}</h2>
    </div>
    {{#if tagDescription}}
      <div class="header-text">
        {{{tagDescription.content}}}
        <hr/>
      </div>
    {{/if}}
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
  <p class="blog-pagination">
    Showing {{posts.length}} posts out of {{total}} total, page {{pageNum}}
  </p>
  <p class="blog-pagination">
    {{#if prevPage}}<a href="{{blogRoutePrefix}}/page/{{prevPage}}">Previous page</a>{{/if}}
    {{#if nextPage}}<a href="{{blogRoutePrefix}}/page/{{nextPage}}">Next page</a>{{/if}}
  </p>
  </div>
</main>
