<article class="fresh-post">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 order-lg-2">
        <div class="fresh-post__img">
          <a href="{{this.url}}"><img src="{{#if this.metadata.header_image_url}}{{{this.metadata.header_image_url}}}{{else}}/static/base/img/post1.jpg{{/if}}" alt="illustration"></a>
        </div>
      </div>
      <div class="col-lg-7 order-lg-1">
        <div class="fresh-post__content">
          <div class="fresh-post__time">
            <time datetime="{{this.published_at}}">
              {{this.published_at_str}}
            </time>
            {{#if this.reading_time}}
              <span>{{this.reading_time}}</span>
            {{/if}}
          </div>
          {{#if index}}
          <h4 class="fresh-post__title">
            <a href="{{this.url}}">
              {{this.title}}
            </a>
          </h4>
          {{else}}
          <h1 class="fresh-post__title">
            {{this.title}}
          </h1>
          {{/if}}
          {{#unless index}}
            <div class="fresh-post__author">
              <img src="{{this.author.avatar}}"  alt="{{this.author.name}}"  >
              {{this.author.name}}
            </div>
          {{/unless}}
          <div class="fresh-post__badges post-badges">
            {{#if series}}
            <a class="serie serie-solid my-2" href="{{series_url}}">
              Series: {{series}}
            </a>
            {{/if}}
            {{#each tags}}
              <a class="tag tag-solid my-2" href="{{this.url}}">
                {{this.key}}
              </a>
            {{/each}}
          </div>
          {{#if index}}
            <div class="fresh-post__excerpt">{{{this.excerpt}}}</div>
          {{else}}
            <div class="fresh-post__social mt-4 mt-md-0">
              <span>Share</span>
              <a href="https://facebook.com/sharer/sharer.php?u={{encodeURI post.full_url}}" target="_blank" rel="noopener" aria-label="">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                  <path
                    fill="#3b5998"
                    d="M16,0A16,16,0,1,0,32,16,16,16,0,0,0,16,0Zm4.736,9.413H18.5c-.789,0-.954.323-.954,1.141v1.973h3.19l-.307,3.464H17.546V26.338H13.413v-10.3H11.264V12.526h2.149V9.763c0-2.592,1.387-3.946,4.462-3.946h2.861v3.6Z"
                  />
                </svg>
              </a>
              <a href="https://twitter.com/intent/tweet/?text={{encodeURI post.title}}&amp;url={{encodeURI post.full_url}}" target="_blank" rel="noopener" aria-label="">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                  <path
                    fill="#00acee"
