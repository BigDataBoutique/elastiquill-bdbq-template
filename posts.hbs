<main class="content">
  <div class="container">
    <div class="mt-5">
      {{> filter-box}}
    </div>
    <div class="mb-4">
      <h2>All Posts {{#if year}}from {{#if month}}{{month}}/{{/if}}{{year}}{{/if}}</h2>
    </div>
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
    {{#if totalPages}}
      {{> pagination}}
    {{/if}}
  </div>
</main>
