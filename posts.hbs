<main class="content">
  <div class="container">
    <div class="pb-5">
      <h2>All Posts {{#if year}}from {{#if month}}{{month}}/{{/if}}{{year}}{{/if}}</h2>
    </div>
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
    {{> sidebar inline=true}}
    {{#if totalPages}}
      {{> pagination}}
    {{/if}}
  </div>
</main>
